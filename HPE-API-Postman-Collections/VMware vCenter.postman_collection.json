{
	"info": {
		"_postman_id": "423abb5e-5a07-4d00-bf14-c7a82b528d4f",
		"name": "VMware vCenter",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create session",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = JSON.parse(responseBody);\r",
							"\r",
							"//Get session identifier\r",
							"var sessionID =  jsonData.value;\r",
							"\r",
							"//Set environment variable\r",
							"postman.setEnvironmentVariable(\"sessionID\", sessionID);\r",
							"\r",
							"//Display X-API-version in test results\r",
							"tests[\"session ID = \" + sessionID ] = true; "
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "{{password}}",
							"type": "string"
						},
						{
							"key": "username",
							"value": "{{username}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [],
				"url": {
					"raw": "https://{{api_host}}/rest/com/vmware/cis/session",
					"protocol": "https",
					"host": [
						"{{api_host}}"
					],
					"path": [
						"rest",
						"com",
						"vmware",
						"cis",
						"session"
					]
				},
				"description": "See https://developer.vmware.com/docs/vsphere-automation/latest/vcenter/vcenter/host/"
			},
			"response": []
		},
		{
			"name": "Get Hosts",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "vmware-api-session-id",
						"value": "{{sessionID}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://{{api_host}}/rest/vcenter/host",
					"protocol": "https",
					"host": [
						"{{api_host}}"
					],
					"path": [
						"rest",
						"vcenter",
						"host"
					]
				}
			},
			"response": []
		},
		{
			"name": "List Folders",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = JSON.parse(responseBody);\r",
							"\r",
							"// Get HOST folder name\r",
							"for (count = 0; count < jsonData.value.length; count++)\r",
							"\t{\r",
							"\t    if (jsonData.value[count].type == \"HOST\")\r",
							"\t    {\r",
							"\t        var foldername = jsonData.value[count].folder;\r",
							"            postman.setEnvironmentVariable(\"foldername\", foldername);\r",
							"\t        tests[\"foldername = \" + foldername] = true;  \r",
							"\t    }\r",
							"}\r",
							"\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "vmware-api-session-id",
						"value": "{{sessionID}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://{{api_host}}/rest/vcenter/folder",
					"protocol": "https",
					"host": [
						"{{api_host}}"
					],
					"path": [
						"rest",
						"vcenter",
						"folder"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create Host",
