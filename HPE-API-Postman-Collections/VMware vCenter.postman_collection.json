		{
			"name": "Get Cluster Information",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = JSON.parse(responseBody);\r",
							"\r",
							"var resourcepool = jsonData.value.resource_pool;\r",
							"\r",
							"tests[\"Resource Pool = \" + resourcepool] = true  \r",
							"\r",
							"\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
