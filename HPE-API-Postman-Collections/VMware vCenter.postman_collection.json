					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"spec\": {\r\n        \"folder\": \"{{foldername}}\",\r\n        \"hostname\": \"192.168.3.191\",\r\n        \"password\": \"HPE_invent\",\r\n        \"thumbprint_verification\": \"NONE\",\r\n        \"user_name\": \"root\"\r\n    }\r\n}"
				},
